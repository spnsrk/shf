# Copy to .env and fill in real values. Do not commit .env.

# AWS (S3 uploads, PDFs, gallery, publications)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=

# Server
PORT=5000
NODE_ENV=development

# Frontend origin for CORS (production only). Example: https://scottishhindufoundation.com
FRONTEND_ORIGIN=

# MongoDB
MONGO_URI=

# JWT (use a strong secret in production)
JWT_SECRET=

# Email (Gmail)
AdminGmail=
AppPassword=
EMAIL_USER=
EMAIL_PASS=

# Redis (optional; used for contact/registration/report queues)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Stripe
STRIPE_SECRET_KEY=
